      "Bash(kubectl describe:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl top:*)",
      "Bash(mkdir:*)",
      "Bash(pkill:*)",
      "Bash(python3:*)",
      "Bash(tar:*)",
      "Bash(tree:*)",
